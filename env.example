# WB AutoSlot Environment Configuration

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-change-in-production

# Database
DATABASE_URL=sqlite:///app/database/app.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# WB Service
WB_BROWSER_HEADLESS=true
WB_BROWSER_TIMEOUT=30000
WB_MAX_RETRIES=3

# Task Worker
WORKER_CHECK_INTERVAL=60
TASK_DEFAULT_INTERVAL=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Notifications
NOTIFICATIONS_ENABLED=false

# Email Configuration (optional)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=WB AutoSlot <noreply@wbauotslot.com>

# Telegram Configuration (optional)
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_ENABLED=true
